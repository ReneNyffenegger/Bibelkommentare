  <table summary='Söhne Davids'>
    <tr><td>1</td><td>Amnon</td><td>Achinoam, die Jesreelitin</td></tr>
    <tr><td>2</td><td>Kileab</td><td>Abigail, die Frau Nabals, des Karmeliters</td></tr>
    <tr><td>3</td><td>Absalom</td><td>Macha, die Tochter Talmais, des Königs von Geschur</td></tr>
    <tr><td>4</td><td>Adonija</td><td>Haggit</td></tr>
    <tr><td>5</td><td>Schephatja</td><td>Abital</td></tr>
