      <a href='http://bibel.renenyffenegger.ch/1tim_1.html#v12'>1.&nbsp;Tim&nbsp;1,12</a>,
      <a href='http://bibel.renenyffenegger.ch/2tim_2.html#v9'>2.&nbsp;Tim&nbsp;2,9</a>
 }
